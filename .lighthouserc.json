{
  "ci": {
    "collect": {
      "startServerCommand": "npx http-server _site -p 8080",
      "startServerReadyPattern": "Available on",
      "url": ["http://localhost:8080/", "http://localhost:8080/catalogue/", "http://localhost:8080/try/"],
      "numberOfRuns": 1
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "categories:accessibility": ["error", { "minScore": 0.9 }],
        "categories:best-practices": ["warn", { "minScore": 0.7 }],
        "categories:performance": ["warn", { "minScore": 0.3 }],
        "categories:seo": ["warn", { "minScore": 0.7 }],

        "color-contrast": "error",
        "heading-order": "error",
        "html-has-lang": "error",
        "link-name": "error",
        "meta-viewport": "error",
        "tabindex": "error",
        "valid-lang": "error",

        "csp-xss": "off",
        "installable-manifest": "off",
        "maskable-icon": "off",
        "splash-screen": "off",
        "themed-omnibox": "off",
        "service-worker": "off",

        "is-crawlable": "off",

        "tap-targets": "off",
        "target-size": "off",
        "image-size-responsive": "off",
        "unsized-images": "off",
        "total-byte-weight": "off",
        "unminified-javascript": "off",
        "link-text": "off",

        "unused-css-rules": "off",
        "unused-javascript": "off",
        "uses-text-compression": "off",
        "bootup-time": "off",
        "dom-size": "off",
        "first-contentful-paint": "off",
        "first-meaningful-paint": "off",
        "largest-contentful-paint": "off",
        "speed-index": "off",
        "interactive": "off",
        "mainthread-work-breakdown": "off",
        "max-potential-fid": "off",
        "cumulative-layout-shift": "off",
        "total-blocking-time": "off",
        "render-blocking-resources": "off",
        "uses-responsive-images": "off",
        "efficient-animated-content": "off",
        "duplicated-javascript": "off",
        "legacy-javascript": "off",
        "offscreen-images": "off",
        "uses-optimized-images": "off",
        "uses-webp-images": "off",
        "uses-long-cache-ttl": "off",
        "font-display": "off",
        "critical-request-chains": "off",
        "meta-description": "off",
        "server-response-time": "off",
        "modern-image-formats": "off",

        "cls-culprits-insight": "off",
        "document-latency-insight": "off",
        "image-delivery-insight": "off",
        "lcp-discovery-insight": "off",
        "network-dependency-tree-insight": "off",
        "cache-insight": "off",
        "render-blocking-insight": "off"
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
